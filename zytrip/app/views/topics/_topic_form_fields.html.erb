	<%= f.check_box :nature, class:"create-edit-trip-form-checkbox" %>
	<label class="create-edit-form-option">Naturaleza y preciosos paisajes</label><br>

	<%= f.check_box :tourism, class:"create-edit-trip-form-checkbox"%>

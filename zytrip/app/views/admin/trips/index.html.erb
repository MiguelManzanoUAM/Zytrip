<p style="color: green"><%= notice %></p>

<h1>Trips de la vista admin</h1>

<% name = current_user.present? ? current_user.email : 'Stranger' %>

<h1>Welcome, <%= name %></h1>

<div id="trips">
  <% @trips.each do |trip| %>
    <%= render trip %>
    <p>
      <%= link_to "Show this trip", trip %>
    </p>
  <% end %>
</div>

<%= link_to "New trip", new_admin_trip_path %>

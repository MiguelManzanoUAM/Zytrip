      <%= f.text_field :subtitle, class:"create-edit-trip-form-input", autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 mb-3">
      <%= f.label(:image_url, "¿Quieres asociar una imagen a tu viaje? Pega aquí la dirección URL de la imagen que quieras poner", class:"create-edit-trip-form-label") %>
      <%= f.text_field :image_url, class:"create-edit-trip-form-input", autofocus: true, placeholder:"https://imagenejemplo.jpg" %>

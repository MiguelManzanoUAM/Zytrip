<div class="row">
  <div class="col-md-6 mb-3">
    <%= f.label(:title, "Título", class:"create-edit-form-label") %>
    <%= f.text_field :title, class:"create-edit-form-input", autofocus: true, required: true %>
  </div>

  <div class="col-md-6 mb-3">
    <%= f.label(:organizer_id, "Organizador", class:"create-edit-form-label") %>
    <%= f.collection_select(:organizer_id, User.all, :id, :name, {include_blank: 'Seleccionar Organizador'}, required: true, 
    class:"create-edit-form-input") %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= f.label(:subtitle, "Subtítulo", class:"create-edit-form-label") %>
    <%= f.text_field :subtitle, class:"create-edit-form-input", autofocus: true %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 mb-3">
    <%= f.label(:price, "Precio", class:"create-edit-form-label") %>
    <%= f.text_field :price, class:"create-edit-form-input", autofocus: true, required: true %>
  </div>

  <div class="col-md-6 mb-3">
    <%= f.label(:rating, "Valoración media", class:"create-edit-form-label") %>
    <%= f.text_field :rating, class:"create-edit-form-input", autofocus: true, required: true %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= f.label(:description, "Descripción", class:"create-edit-form-label") %>
    <%= f.text_field :description, class:"create-edit-form-input", autofocus: true %>
  </div>
</div>

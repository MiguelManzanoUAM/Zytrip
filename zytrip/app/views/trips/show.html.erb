<%= render "layouts/header" %>
<div class="trip-main">
  <div class="trip-main-container-outside">
    <div class="trip-main-container">
      <div class="row trip-main-box">
        <div class="col">
            <% if @trip.image %>
                <%= image_tag(@trip.image) %>
            <% else %>
                <%= image_tag("no-image-available.png") %>
            <% end %>
        </div>
        <div class="col">
            <div class="trip-main-box-title">
              <p><b><%=@trip.title%></b></p>
            </div>
            <p class="trip-main-box-info"><%= @trip.city %>, <%= @trip.country%></p>
            <div class="row trip-main-box-price-container">
              <div class="col-8">
                <p class="trip-price-info">Desde <b class="trip-price-colored"><%= @trip.price%>€</b></p>
              </div>
              <div class="col-4">
                <p class="trip-booking-box">RESERVAR</p>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>

  <div class="trip-description">
    <p><%=@trip.description %></p>
  </div>

  <div class="trip-about">
    <div class="row">
      <div class="col-3">
        <div class="trip-section">
          <p class="trip-section-title">Organizado por</p>
          <hr>
          <p class="trip-section-info">
            <% if @agency.logo %>
              <%= image_tag(@agency.logo) %> <%= @agency.name %> (<%= @agency.phone_number %>)
            <% else %>
              <%= image_tag("user.jpeg") %> <%= @agency.name %> (<%= @agency.phone_number %>)
            <% end %>
          </p>
        </div>

        <div class="trip-section">
          <p class="trip-section-title">Acerca de esta experiencia</p>
          <hr>
          <p class="trip-section-info"><b>Duración:</b> 5 días</p>
          <p class="trip-section-info"><b>Otra información:</b> No se que poner</p>
        </div> 
      </div>

      <div class="col-6">
        <div class="trip-itinerary">
          <p class="trip-section-title">Itinerario de actividades</p>
          <hr>
          <p class="trip-section-info">Aqui ira detallado el itinerario de actividades</p>
          <% if @trip.preference %>
            <p>Servicio comida <%= @trip.preference.service.gastronomy %></p>
            <p>Duración: <%= @trip.preference.duration %></p>
          <% else %>
            <p> No se especifican preferencias </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="trip-ratings">
    <p class="trip-section-title">Valoraciones de los usuarios</p>
    <hr>
    <p class="trip-section-info">cajita de comentario con foto + comentario</p>
  </div>
</div>


<!-- render footer -->
<%= render "layouts/footer" %>


<% content_for :view_specific_css do %>
    <%= stylesheet_link_tag "main" %>
<% end %>

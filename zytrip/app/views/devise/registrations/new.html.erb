<%= render 'layouts/header' %>
<div class="registration-form registration-form-img">
  <div class="registration-form-container">
    <%= image_tag("local/user.jpeg", alt: "imagen usuario", class:"registration-avatar") %>
    <h2>Crear nueva cuenta</h2>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <div class="invalid-field">
          <% if resource.errors[:name].any? %>
            <text class="invalid-field-step">-></text><%= resource.errors[:name].last %>
          <% elsif resource.errors[:surname].any? %>
            <text class="invalid-field-step">-></text><%= resource.errors[:surname].last %>
          <% elsif resource.errors[:email].any? %>
            <text class="invalid-field-step">-></text><%= resource.errors[:email].last %>
          <% elsif resource.errors[:password].any? %>
            <text class="invalid-field-step">-></text><%= resource.errors[:password].last %>
          <% end %>
        </div>
      <% end %>

      <div class="row">
        <div class="col col-6">
          <label class="registration-form-label">Nombre<text class="required-star">*</text></label>
          <!--<%= f.label(:name, "Nombre", class:"registration-form-label") %><text class="required-star">*</text>-->
          <%= f.text_field :name, autofocus: true, class:"registration-form-input", placeholder:"Introduzca un nombre..." %>
        </div>

        <div class="col col-6">
          <label class="registration-form-label">Apellido(s)<text class="required-star">*</text></label>
          <!--<%= f.label(:surname, "Primer apellido", class:"registration-form-label") %><text class="required-star">*</text>-->
          <%= f.text_field :surname, autofocus: true, class:"registration-form-input", placeholder:"Introduzca un apellido..."%>
        </div>
      </div>

      <div class="row">
        <div class="col col-12">
          <label class="registration-form-label">Email<text class="required-star">*</text></label>
          <!--<%= f.label(:email, "Email", class:"registration-form-label") %><text class="required-star">*</text>-->
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"registration-form-input", placeholder:"Introduzca una dirección de correo..." %>
        </div>
      </div>

      <div class="row">
        <div class="col col-12">
          <label class="registration-form-label">Contraseña<text class="required-star">*</text></label>
          <!--<%= f.label(:password, "Contraseña", class:"registration-form-label") %><text class="required-star">*</text>-->
          <%= f.password_field :password, autocomplete: "new-password", class:"registration-form-input", placeholder:"Introduzca una contraseña..." %>
        </div>
      </div>

      <!--<div class="row">
        <div class="col col-12">
          <%= f.label(:password_confirmation, "Repetir contraseña", class:"registration-form-label") %><text class="required-star">*</text>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"registration-form-input", placeholder:"Confirme su contraseña..." %>
        </div>
      </div>-->

      <div class="actions">
        <%= f.submit "Registrarse", class:"registration-form-submit-btn"%>
      </div>

      <p class="login-form-advise">
        ¿Ya tienes una cuenta?
      </p>

      <div class="login-form-submit-btn">
        <%= link_to 'Iniciar sesión', new_user_session_path, class:"login-registration-link"%>
      </div>

    <% end %>

  </div>
</div>

<% content_for :view_specific_css do %>
    <%= stylesheet_link_tag "main" %>
<% end %>
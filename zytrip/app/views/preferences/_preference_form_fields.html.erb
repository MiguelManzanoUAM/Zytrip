<div class="row justify-content-center">
  <div class="col-7 mb-3">
    <label class="create-edit-trip-form-select">
      ¿Dónde realizaste tu viaje?
      <%= f.select(:destination, ["Rutas Ibéricas", "Europa", "América", "Asia", "África"]) %>
    </label>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-7 mb-3">
    <label class="create-edit-trip-form-select">
      ¿Cúantos días duró tu viaje?
      <%= f.select(:duration, ["Menos de 3 días", "Entre 3 y 5 días", "Entre 5 y 7 días", "Más de una semana"]) %>
    </label>
  </div>
</div>

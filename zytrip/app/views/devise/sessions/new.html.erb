<%= render 'layouts/header' %>
<div class="registration-form login-form-img">
  <div class="login-form-container">
    <%= image_tag("local/user.jpeg", alt: "imagen usuario", class:"registration-avatar") %>
    <h2>Iniciar Sesión</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <% flash.each do |key, value| %>
        <div class="invalid-field">
          <text class="invalid-field-step">-></text><%= value %>          
          <% break %>
        </div>
      <% end %>

      <br><br>

      <div class="row">
        <div class="col col-12">
          <label class="registration-form-label">Email<text class="required-star">*</text></label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"registration-form-input", placeholder:"Introduzca su dirección de correo..." %>
        </div>
      </div>

      <div class="row">
        <div class="col col-12">
          <label class="registration-form-label">Contraseña<text class="required-star">*</text></label>
          <%= f.password_field :password, autocomplete: "new-password", class:"registration-form-input", placeholder:"Introduzca su contraseña..." %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Iniciar Sesión", class:"registration-form-submit-btn" %>
      </div>

      <p class="login-form-advise">
        ¿Aún no tienes una cuenta?
      </p>

      <div class="login-form-submit-btn">
        <%= link_to 'Registrarse', new_user_registration_path, class:"login-registration-link"%>
      </div>

    <% end %>
  </div>
</div>

<% content_for :view_specific_css do %>
    <%= stylesheet_link_tag "main" %>
<% end %>
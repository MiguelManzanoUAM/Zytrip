<%= render "layouts/header" %>
<section>
  <div>
    <h1>Trips</h1>

    <% name = current_user.present? ? current_user.email : 'Stranger' %>

    <h1>Welcome, <%= name %></h1>

    <div id="trips">
      <% @trips.each do |trip| %>
        <%= render trip %>
        <p>
          <%= link_to "Show this trip", trip %>
        </p>
      <% end %>
    </div>
  </div>
</section>

<% content_for :view_specific_css do %>
    <%= stylesheet_link_tag "main" %>
<% end %>
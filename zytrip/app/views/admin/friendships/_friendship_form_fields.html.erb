<div class="row">
	<div class="col-md-6 mb-3">
		<%= f.label(:user_id, "Usuario", class:"create-edit-form-label") %>
		<%= f.collection_select(:user_id, User.all, :id, :surname, {include_blank: 'Selecciona un usuario'}, required: true, 
		class:"create-edit-form-input") %>
	</div>

	<div class="col-md-6 mb-3">
		<%= f.label(:friend_id, "Amigo a seguir", class:"create-edit-form-label") %>
		<%= f.collection_select(:friend_id, User.all, :id, :surname, {include_blank: 'Selecciona un amigo'}, required: true, 
		class:"create-edit-form-input") %>
	</div>
</div>